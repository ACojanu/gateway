<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.kaazing</groupId>
        <artifactId>common</artifactId>
        <version>2.0.0.29</version>
    </parent>

    <groupId>org.kaazing</groupId>
    <artifactId>gateway.bridge</artifactId>
    <packaging>jar</packaging>
    <version>5.0.0.6-SNAPSHOT</version>

    <name>Kaazing WebSocket Gateway - Bridge Resources</name>

    <url>https://github.com/kaazing/gateway.bridge.git</url>
    <scm>
        <connection>scm:git:${project.scm.url}</connection>
        <developerConnection>scm:git:${project.scm.url}</developerConnection>
        <url>git@github.com:kaazing/gateway.bridge.git</url>
    </scm>

    <dependencies>
        <!-- This dependency is needed for core assemblies, but could be removed
             if those are fixed. Otherwise, it is not used here but must remain -->
        <dependency>
            <groupId>com.kaazing.gateway</groupId>
            <artifactId>com.kaazing.gateway.client.javascript.bridge</artifactId>
            <version>[4.0.0.0,4.1.0.0)</version>
        </dependency>
        <dependency>
            <groupId>com.kaazing.gateway.core</groupId>
            <artifactId>com.kaazing.gateway.core.client.java.bridge</artifactId>
            <version>[3.3.0.0,3.4.0.0)</version>
        </dependency>
        <dependency>
            <groupId>com.kaazing.gateway</groupId>
            <artifactId>com.kaazing.gateway.client.java.bridge</artifactId>
            <version>[4.0.0.0,4.1.0.0)</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <stripVersion>true</stripVersion>
                            <outputDirectory>target/resources</outputDirectory>
                            <includeArtifactIds>
                                com.kaazing.gateway.client.javascript.bridge,
                                com.kaazing.gateway.core.client.java.bridge,
                                com.kaazing.gateway.client.java.bridge
                            </includeArtifactIds>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.7</version>
                <executions>
                    <execution>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <target>
                                <copy file="target/resources/com.kaazing.gateway.core.client.java.bridge.jar" tofile="${project.build.outputDirectory}/com/kaazing/gateway/bridge/CrossSiteAcceptor.jar" />
                                <copy file="target/resources/com.kaazing.gateway.client.java.bridge.jar" tofile="${project.build.outputDirectory}/com/kaazing/gateway/bridge/CrossSiteAcceptor40.jar" />
                                <unzip src="target/resources/com.kaazing.gateway.client.javascript.bridge.jar" dest="${project.build.outputDirectory}">
                                    <patternset>
                                        <include name="**/*.js" />
                                    </patternset>
                                </unzip>
                            </target>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
